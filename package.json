{
  "name": "snoozecorp",
  "version": "1.0.0",
  "type": "module",
  "description": "Installing this extension will block all websites that Rupert Murdoch controls.",
  "main": "src/content.js",
  "scripts": {
    "build": "webpack --mode=production",
    "build:chrome": "webpack --mode=production --env browser=chrome",
    "build:firefox": "webpack --mode=production --env browser=firefox",
    "dev": "webpack --mode=development --watch",
    "clean": "rimraf dist",
    "test": "echo \"No tests specified\"",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "keywords": ["browser-extension", "webextension", "blocker"],
