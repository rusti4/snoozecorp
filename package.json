{
  "name": "snoozecorp",
  "version": "1.0.0",
  "type": "module",
  "description": "Installing this extension will block all websites that Rupert Murdoch controls.",
  "main": "src/content.js",
  "scripts": {
    "build": "webpack --mode=production",
    "dev": "webpack --mode=development --watch",
    "clean": "rimraf dist",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "lint": "eslint src/ options/",
    "lint:fix": "eslint src/ options/ --fix",
    "lint:json": "node scripts/validate-json.cjs",
    "lint:yaml": "yamllint crowdin.yml .github/workflows/crowdin.yml",
    "lint:md": "markdownlint README.md",
    "lint:all": "npm run lint && npm run lint:json && npm run lint:yaml && npm run lint:md"
  },
  "keywords": [
    "browser-extension",
    "webextension",
    "blocker"
  ],
  "author": "RussellTaylor",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.25.0",
    "@babel/preset-env": "^7.25.0",
    "@eslint/js": "^9.37.0",
    "@playwright/test": "^1.56.0",
    "babel-loader": "^10.0.0",
    "copy-webpack-plugin": "^13.0.1",
    "eslint": "^9.37.0",
    "globals": "^16.4.0",
    "markdownlint-cli": "^0.45.0",
    "rimraf": "^6.0.1",
    "webpack": "^5.95.0",
    "webpack-cli": "^6.0.1",
    "yaml-lint": "^1.7.0"
  },
  "dependencies": {
    "webextension-polyfill": "^0.12.0"
  }
}
