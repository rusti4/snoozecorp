  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.25.0",
    "@babel/preset-env": "^7.25.0",
    "@eslint/js": "^9.37.0",
    "babel-loader": "^10.0.0",
    "copy-webpack-plugin": "^13.0.1",
    "eslint": "^9.37.0",
    "globals": "^16.4.0",
    "rimraf": "^6.0.1",
    "webpack": "^5.95.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "webextension-polyfill": "^0.12.0"
  }
}